<% include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<h1>Campgrounds</h1>
		<p>View our hand-picked campgrounds from all over the US!</p>
		<p><a href="/campgrounds/new" class="btn btn-primary btn-lg">
			Add New Campground
		</a></p>
	</header>


	<div class="page-header">
		<h3>Most Popular Campgrounds</h3>
	</div>
	
	<div class="row campgrounds">
	<% campgrounds.forEach(function(campground) { %>
		<div class="col-md-3 col-sm-6">
			
			<div class="thumbnail index-thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption">
					<h4><%= campground.name %></h4>
					<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
				</div>
			</div>

			
		</div>
	<% }); %>
	</div>
</div>
<% include ../partials/footer %>