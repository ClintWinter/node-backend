<% include ../partials/header %>

<div class="container campgrounds-new">
	<div class="row col-xs-12 col-md-6 col-md-offset-3">
		<div class="page-header">
			<h1>Create a new campground</h1>
		</div>

		<div class="campgrounds-form">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Campground</label>
					<input name="name" type="text" placeholder="name" class="form-control">
				</div>

				<div class="form-group">
					<label for="image">Image URL</label>
					<input name="image" type="text" placeholder="image url" class="form-control">
				</div>

				<div class="form-group">
					<label for="price">Price</label>
					<div class="input-group">
						<span class="input-group-addon">$</span>
						<input name="price" type="number" min="0.00" step="1.00" class="form-control text-right" placeholder="10">
						<span class="input-group-addon">.00</span>
					</div>
				</div>

				<div class="form-group">
					<label for="description">Description</label>
					<textarea name="description" rows="4" class="form-control"></textarea>
				</div>
				
				<div class="form-group">
					<input type="submit" class="btn btn-warning btn-lg btn-block">
				</div>
			</form>

			<p><a href="/campgrounds">Go Back</a></p>
		</div>
	</div>
</div>

<% include ../partials/footer %>