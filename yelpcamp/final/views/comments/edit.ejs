<% include ../partials/header %>

<div class="container comments-new">
	<div class="row">
		<h1>Edit comment</h1>

		<div class="comments-form">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="comment[text]">Comment</label>
					<textarea name="comment[text]" class="form-control" placeholder="Comment"><%=comment.text%></textarea>
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-warning btn-lg btn-block">
				</div>
			</form>

			<p><a href="/campgrounds/<%=campground_id%>">Go Back</a></p>
		</div>
	</div>
</div>

<% include ../partials/footer %>