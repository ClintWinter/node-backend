<% include ../partials/header %>

<div class="container comments-new">
	<div class="row col-xs-12 col-md-6 col-md-offset-3">
		<div class="page-header">
			<h1>Add a Comment to <%=campground.name%></h1>
		</div>

		<div class="comments-form">
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
				<div class="form-group">
					<label for="comment[text]">Comment</label>
					<textarea name="comment[text]" class="form-control" placeholder="Comment"></textarea>
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-warning btn-lg btn-block">
				</div>
			</form>

			<p><a href="/campgrounds/<%=campground._id%>">Go Back</a></p>
		</div>
	</div>
</div>

<% include ../partials/footer %>