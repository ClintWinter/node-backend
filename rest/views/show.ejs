<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title %></div>
	<div class="ui header">
		<a class="ui orange button" href="/blogs/<%= blog._id %>/edit">Edit Post</a>
		<form class="delete-button" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
			<button class="ui red button">DELETE</button>
		</form>
	</div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= blog.image %>" alt="">
			<div class="content">
				<p><%= blog.created.toDateString() %></p>
			</div>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
		</div>
	</div>
</div>

<% include partials/footer %>